@model CalculatorApp.Models.Operation

@{
    ViewData["Title"] = "Calculator";
}

<h2>Simple Calculator</h2>

<form asp-action="Index" method="post">
    <div>
        <label>First number:</label>
        <input asp-for="Operand1" />
    </div>
    <div>
        <label>Second number:</label>
        <input asp-for="Operand2" />
    </div>
    <div>
        <label>Operation:</label>
        <select asp-for="SelectedOperation" asp-items="Html.GetEnumSelectList<CalculatorApp.Models.Operation.OperationType>()"></select>
    </div>
    <button type="submit">Calculate</button>
</form>

@if (Model != null)
{
    <h3>Result: @Model.Result</h3>
}
